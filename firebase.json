{
  "database": {
    "rules": "rules.bolt"
  },
  "firestore": {
    "rules": "rules.firestore"
  },
  "functions": {
  	"source": "."
  },
  "hosting": {
    "public": ".",
    "rewrites": [
      {
        "source": "**",
        "destination": "/app.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
